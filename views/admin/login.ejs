<%- include elements/loginheader.ejs %> 

<body class="hold-transition login-page">
<div class="login-box">
  
  <!-- /.login-logo -->
  <div class="login-box-body">
  <center>
      <h2 class="logo-text">FBEXPO</h2>
    </center>
    <h3 class="description">Welcome back, Sign In</h3>
    <br>
    <form action="" method="post">
      <div class="form-group has-feedback">
        <input type="username" name="email" class="form-control" placeholder="Username/Email">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span class="error" style="color: red;"><%=errorData.email%></span> 

      </div>

     
      
      <div class="row">
       
        <!-- /.col -->
        <div class="col-xs-12">
          <button type="submit" class="btn btn-primary btn-block btn-flat c-button">Sign In</button>
        </div>
        <!-- /.col -->
      </div>
    </form>
    <br>
    <div class="text-center" style="margin-top: 20px;">
      <p>Don't have an account? <a class="resend-otp link" href="register">Register</a></p>
    </div>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 3 -->
<script src="assets/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="assets/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="assets/plugins/iCheck/icheck.min.js"></script>
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });
</script>
</body>
</html>